<div class="navbar-default sidebar" role="navigation">
  <div class="sidebar-nav navbar-collapse">
    <ul class="nav" id="side-menu">
      <li class="sidebar-search">
        <%= form_tag clients_path, :method => :get do %>
          <div class="input-group custom-search-form">
            <%= text_field_tag :q, params[:q], placeholder: "Pesquisar...", class: 'form-control' %>
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>
        <% end %>
      </li>
      <li class="home">
        <%= link_to '<i class="fa fa-home fa-fw"></i> Home'.html_safe, 
                    '/', 
                    :class => ('active' if request.path == '/') %>
      </li>
      <li class="people">
        <%= link_to '<i class="fa fa-users fa-fw"></i> Clientes'.html_safe, 
                    clients_path, 
                    :class => ('active' if request.path.start_with? clients_path) %>
      </li>

      <% if policy(User).index? %>
        <li class="users">
          <%= link_to(users_path, class: ('active' if request.path.start_with? users_path)) do %>
            <i class="fa fa-key fa-fw"></i> Controle de Acesso
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
