<div class="page-header">
  <h1>Clientes</h1>
  <%= link_to "Novo Cliente", new_client_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <% if params[:q] %>
    <div class="panel-body">
      Resultado da pesquisa por: "<%= params[:q] %>"
    </div>
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Email</th>
        <th width="30px"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= link_to client.name, client %></td>
          <td><%= client.phones.map(&:number).join(', ') %></td>
          <td><%= client.emails.map(&:address).join(', ') %></td>
          <td><%= link_to 'Editar', edit_client_path(client), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
