<div class="login-card card card-default">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'Senha', class: 'form-control'  %>
      </div>
      <div class="checkbox mb-3">
        <input name="remember" type="checkbox" value="Remember Me" id="remember_me" class="form-check-input">
        <label for="remember_me" class="form-check-label">
          Lembrar de mim
        </label>
      </div>
      <%= f.submit 'Entrar', class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
  </div>
</div>
