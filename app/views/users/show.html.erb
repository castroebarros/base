<h1>
  <%= @user.name %>
</h1>

<div class="panel panel-default">
  <table class="table table-bordered">
    <tr>
      <th>Nome</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>Perfil</th>
      <td><%= @user.profile_text %></td>
    </tr>
    <tr>
      <th>Situação</th>
      <td><%= @user.active ? 'Ativo' : 'Inativo' %></td>
    </tr>
  </table>

  <div class="panel-footer">
    <%= link_to 'Editar Cadastro', edit_user_path(@user), class: 'btn btn-default' %>
    <%= link_to '<i class="fa fa-trash-o"></i> Deletar'.html_safe, @user, :method => 'delete', 
                 :class => 'btn btn-danger pull-right', :confirm => "Tem certeza que quer deletar esse usuário e todas as suas informações?" %>
  </div>
</div>

